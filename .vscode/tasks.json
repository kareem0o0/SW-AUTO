{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "-c",
                "Debug"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run SolidWorks Automation",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "--project",
                "SwAutomationApp/SwAutomationApp.csproj",
                "--configuration",
                "Debug",
                "--no-build"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
